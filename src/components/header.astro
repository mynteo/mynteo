---
const { title, description } = Astro.props;
---

<header class="flex flex-col gap-4 md:flex-row md:items-center">
  <div class="h-16 w-16">
    <img
      class="rounded-full"
      src="/thumbnail.png"
      alt="mynteo logo"
      width="512"
      height="512"
    />
  </div>
  <div class="flex flex-col leading-relaxed">
    <h1 class="text-xl font-bold text-zinc-800 dark:text-zinc-200">
      {title}
    </h1>
    <p class="text-zinc-600 dark:text-zinc-400">{description}</p>
  </div>
</header>
